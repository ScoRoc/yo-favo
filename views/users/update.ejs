<% include ../partials/header-top %>

<title>yo! favo | <%= user.first_name %>'s profile page</title>

<% include ../partials/header-bottom %>

<% include ../partials/profile-top %>

<!-- body content goes below here -->


<div class="row">
  <div class="col s12 l3 offset-l1">
    <div class="row">
      <div class="col s12 center-align">
        <i class="fas user-pic fa-user-circle"></i>
      </div>
    </div>
  </div>
  <div class="col s10 offset-s1 l6 offset-l1 my-form-wrapper">
    <form id="update-user-form" action="/users/<%= currentUser.id %>/update" method="PUT">

      <div class="input-field">
        <i class="material-icons prefix">person_outline</i>
        <input class="validate" id="authFirstName" type="text" name="first_name" value="<%= user.first_name %>">
        <label for="authName">First Name</label>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">person_outline</i>
        <input class="validate" id="authLastName" type="text" name="last_name" value="<%= user.last_name %>">
        <label for="authName">Last Name</label>
      </div>

      <div class="input-field">
        <i class="material-icons prefix">mail_outline</i>
        <input class="validate" id="authEmail" class="form-control" data-userId="<%= currentUser.id %>" type="email" name="email" value="<%= user.email %>">
        <label for="authEmail">Email</label>
      </div>

      <!-- <div class="input-field">
        <i class="material-icons prefix">lock_outline</i>
        <input class="validate" id="authPassword" type="password" name="password">
        <label for="authPassword">Password</label>
      </div> -->
      <div class="my-form-submit-wrapper center-align">
        <input class="center-align my-form-submit" type="submit">
      </div>
    </form>
  </div>
</div>

<script>var userId = '<%= currentUser.id %>'</script>

