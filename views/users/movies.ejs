<% include ../partials/header-top %>

<title>yo! favo | <%= currentUser.first_name %>'s profile page</title>

<% include ../partials/header-bottom %>

<% include ../partials/profile-top %>

<!-- body content goes below here -->

<div class="row">
  <div class="col s12 l5 offset-l1 test-img-col">
    <div class="row">
      <div class="col s12">
        <p>img goes here</p>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <a href="/users/<%= currentUser.id %>/update">edi yo! profile</a>
      </div>
    </div>
  </div>
  <div class="col s12 l6">
    <div class="row">
      <div class="col s8 offset-s2">
        <h4>yo! top movies</h4>
      </div>
    </div>
    <div class="row">
      <div class="col s10 offset-s2">
        <ul id="sortable">
          <% favos.forEach(function(favo) { %>
            <% if (favo.type === 'movie') { %>
              <li id="<%= favo.id %>" class="movie-li flow-text ui-state-default">
                <span class="ui-icon ui-icon-arrowthick-2-n-s"></span>
                <a href="/favos/<%= favo.name %>"><%= favo.name %></a>
                <a class='delete-link' data-type="<%= favo.type %>" href="/users/<%= currentUser.id %>/favos/<%= favo.id %>"><i class="right material-icons">close</i></a>
              </li>
            <% }; %>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</div>


